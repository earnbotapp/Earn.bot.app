// FILE: server.js (Backend + Bot with MongoDB Atlas)

// Step 1: Install Dependencies // Run in terminal: // npm init -y // npm install express node-telegram-bot-api cors body-parser mongoose

const express = require('express'); const bodyParser = require('body-parser'); const cors = require('cors'); const TelegramBot = require('node-telegram-bot-api'); const mongoose = require('mongoose');

const app = express(); app.use(cors()); app.use(bodyParser.json());

// === CONFIG === // âœ… Yahaan aapke real Bot Token aur MongoDB Atlas URI set kar diye gaye hain. // Agar aap security ke liye naya token/password banate ho to sirf yahan update karna hoga.

const BOT_TOKEN = "8425796654:AAHYAijN0LFEBlY0ORJxD26mbOXMbr4lXwc";
const MONGO_URI = "mongodb+srv://Pavan1234:Pavanyadav1%40@cluster0.5r8saoy.mongodb.net/earnapp?retryWrites=true&w=majority&appName=Cluster0";

const bot = new TelegramBot(BOT_TOKEN, { polling: true });

// === MongoDB Setup === mongoose.connect(MONGO_URI, { useNewUrlParser: true, useUnifiedTopology: true }) .then(() => console.log('âœ… MongoDB connected')) .catch(err => console.error(err));

const userSchema = new mongoose.Schema({ userId: { type: String, required: true, unique: true }, coins: { type: Number, default: 0 }, referredBy: { type: String, default: null } });

const User = mongoose.model('User', userSchema);

// === Helper === async function getUser(userId) { let user = await User.findOne({ userId }); if (!user) { user = new User({ userId, coins: 0 }); await user.save(); } return user; }

// === Bot Start Command === bot.onText(//start(.*)/, async (msg, match) => { const chatId = msg.chat.id.toString(); const ref = match[1]?.trim();

let user = await User.findOne({ userId: chatId }); if (!user) { user = new User({ userId: chatId, coins: 0, referredBy: ref || null }); await user.save();

if (ref && ref !== chatId) {
  let refUser = await User.findOne({ userId: ref });
  if (refUser) {
    refUser.coins += 50; // referral bonus
    await refUser.save();
    bot.sendMessage(ref, `ðŸŽ‰ You earned 50 coins! Your friend joined.`);
  }
}

}

bot.sendMessage(chatId, Welcome! You have ${user.coins} coins., { reply_markup: { inline_keyboard: [ [{ text: "ðŸŽ Daily Reward", callback_data: "daily" }], [{ text: "â–¶ï¸ Watch Ad", callback_data: "ad" }], [{ text: "ðŸŽ² Spin Game", callback_data: "spin" }], [{ text: "ðŸ‘¥ Invite Friends", callback_data: "ref" }], [{ text: "ðŸ’° My Balance", callback_data: "balance" }] ] } }); });

// === Callback Queries === bot.on('callback_query', async (query) => { const chatId = query.message.chat.id.toString(); const data = query.data;

let user = await getUser(chatId);

switch(data) { case "daily": user.coins += 10; await user.save(); bot.sendMessage(chatId, âœ… You got 10 daily coins! Balance: ${user.coins}); break; case "ad": user.coins += 5; await user.save(); bot.sendMessage(chatId, ðŸ“º Thanks for watching ad! +5 coins. Balance: ${user.coins}); break; case "spin": const win = Math.floor(Math.random()*20); user.coins += win; await user.save(); bot.sendMessage(chatId, ðŸŽ² You spun and won ${win} coins! Balance: ${user.coins}); break; case "ref": bot.sendMessage(chatId, ðŸ‘¥ Invite friends using this link: https://t.me/YourBotUsername?start=${chatId}); break; case "balance": bot.sendMessage(chatId, ðŸ’° Your balance: ${user.coins} coins.); break; } bot.answerCallbackQuery(query.id); });

// === API for frontend (optional) === app.get('/users', async (req, res) => { const allUsers = await User.find(); res.json(allUsers); });

const PORT = process.env.PORT || 5000; app.listen(PORT, () => console.log(ðŸš€ Server running on port ${PORT}));

